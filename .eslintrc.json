{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "no-restricted-exports": ["error", { "restrictedNamedExports": [] }],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "import/no-unresolved": ["error", { "ignore": ["yet-another-react-lightbox/*"] }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    }
}
